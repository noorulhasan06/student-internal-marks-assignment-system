<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mcs.du.noorul.smas.add_sub_teacher">

    <include
        android:id="@+id/ab"
        layout="@layout/appbar" />

    <Spinner
        android:id="@+id/sp_department_register"
        android:layout_width="match_parent"
        android:layout_below="@id/ab"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <Spinner
        android:id="@+id/sp_course_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/sp_department_register" />
    <Spinner
        android:id="@+id/sp_subject_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/sp_course_register" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginBottom="88dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
